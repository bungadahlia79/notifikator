<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Dark mode app theme -->
	<style name="AppTheme" parent="@android:style/Theme.Material">
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/textPrimary</item>
		<item name="android:textColorSecondary">@color/textSecondary</item>
		<item name="android:windowBackground">@color/backgroundColor</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textViewStyle">@style/ModernTextView</item>
	</style>

	<!-- Dark mode preference theme -->
	<style name="PreferenceTheme" parent="@android:style/Theme.Material">
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/textPrimary</item>
		<item name="android:textColorSecondary">@color/textSecondary</item>
		<item name="android:windowBackground">@color/backgroundColor</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<!-- Modern text view style -->
	<style name="ModernTextView" parent="android:Widget.Material.TextView">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:letterSpacing">0.01</item>
	</style>

	<!-- Card style for modern elevated look -->
	<style name="ModernCard">
		<item name="android:background">@color/cardBackground</item>
		<item name="android:elevation">2dp</item>
	</style>
</resources>
